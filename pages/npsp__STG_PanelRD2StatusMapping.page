<apex:page controller="npsp.RD2_StatusMappingSettings_CTRL" id="RD2_StatusMapping" standardStylesheets="false">

    <apex:slds />
    <apex:includeLightning />

    <style>
        /* Remove box shadow when user clicks on the datatable cell in both view and edit modes */	
        th.slds-has-focus {	
            box-shadow: none !important;	
        }	
        td.slds-has-focus {	
            box-shadow: none !important;	
        }
    </style>

    <div class="slds-scope">
        <div class="slds-m-around_large">
            <c:STG_PageHeader sectionLabel="{!$Label.npsp__stgnavrecurringdonations}" pageLabel="{!$Label.npsp__stgnavrd2statusmapping}" />
        </div>

        <div id="statusMappingDiv">
        </div>
    </div>

    <script>
        var namespace = '{!namespace}';
        if (!namespace || namespace === '') {
            namespace = 'c';
        }

        $Lightning.use(namespace + ":RD2_EnablementApp", function () {
            $Lightning.createComponent(
                namespace + ':rd2StatusMappingSettings',
                {},
                "statusMappingDiv",
                function () { }
            );
        });
    </script>

</apex:page>